# Harborshield Environment Configuration
# Copy this file to .env and customize as needed

# Logging Configuration
# Options: trace, debug, info, warn, error
RUST_LOG=info

# Enable backtrace for debugging (1 for enabled, 0 for disabled)
RUST_BACKTRACE=1

# Log output path
# Options: stdout, stderr, or a file path
LOG_PATH=stdout

# Docker API timeout
TIMEOUT=10s

# Docker Configuration
# Docker host (default uses local socket)
DOCKER_HOST=unix:///var/run/docker.sock

# Docker API version (leave empty for auto-negotiation)
DOCKER_API_VERSION=

# Docker TLS Configuration (for remote Docker hosts)
# Set to 1 to enable TLS verification
DOCKER_TLS_VERIFY=

# Path to Docker certificates
DOCKER_CERT_PATH=

# Health Check Server
# Address for health check endpoint
HEALTH_SERVER_ADDR=0.0.0.0:8080